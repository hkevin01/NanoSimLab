# NanoSimLab Environment Configuration
# Copy this to .env and customize as needed

# ============================================================================
# Docker Configuration
# ============================================================================

# Docker image names
IMAGE_NAME=nanosimlab-api:local
GUI_IMAGE_NAME=nanosimlab-gui:local

# Service names
SERVICE_NAME=nanosimlab-api
GUI_SERVICE_NAME=nanosimlab-gui

# Port mappings
PORTS=8080:8080
GUI_PORT=3000

# Development mode (true/false)
DEV_MODE=false

# Docker platform (e.g., linux/amd64, linux/arm64)
DOCKER_PLATFORM=

# Additional volume mounts (format: src:dest,src2:dest2)
MOUNTS=

# Build arguments (format: KEY=VAL KEY2=VAL2)
BUILD_ARGS=

# ============================================================================
# API Configuration
# ============================================================================

# API URL for GUI to connect to
API_URL=http://localhost:8080

# FastAPI settings
HOST=0.0.0.0
PORT=8080
WORKERS=1
ENV=production

# ============================================================================
# GUI Configuration
# ============================================================================

# GUI path (where GUI files are located)
GUI_PATH=./gui

# ============================================================================
# Application Settings
# ============================================================================

# Random seed for reproducible simulations (optional)
# RANDOM_SEED=42

# Default simulation parameters
DEFAULT_N_PARTICLES=200
DEFAULT_BOX_SIZE=20.0
DEFAULT_STEPS=10000
DEFAULT_TEMPERATURE=1.0

# ============================================================================
# Performance Settings
# ============================================================================

# Number of CPU cores to use
# CPU_CORES=4

# Memory limit for simulations (in GB)
# MEMORY_LIMIT=4

# ============================================================================
# Logging Configuration
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log format
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ============================================================================
# Security Settings (for production)
# ============================================================================

# CORS allowed origins (comma-separated)
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# API authentication (if needed)
# API_KEY=your-secret-api-key

# ============================================================================
# Database Configuration (if needed for job persistence)
# ============================================================================

# Redis URL for job storage (optional)
# REDIS_URL=redis://localhost:6379/0

# Database URL for persistent storage (optional)
# DATABASE_URL=sqlite:///nanosimlab.db
